<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RecordKeeperMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RecordKeeperMAUI"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:Home}"
        Route="Home" />

        <ShellContent
        Title="President Search"
        ContentTemplate="{DataTemplate local:PresidentSearch}"
        Route="PresidentSearch" />

        <ShellContent
            Title="Olympics List"
            ContentTemplate="{DataTemplate local:OlympicsList}"
            Route="OlympicsList"
            />
    </TabBar>
    
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:Login}"
        Route="Login" />
    
</Shell>
