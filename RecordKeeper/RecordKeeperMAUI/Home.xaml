<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecordKeeperMAUI.Home"
             Title="Home">
    <VerticalStackLayout x:Name="DashboardLst" HorizontalOptions="Center">
        <BindableLayout.ItemTemplate>
            <DataTemplate>
                <Button x:Name="DashboardBtn" Text="{Binding DashboardText}" Margin="0,10,0,0" Clicked="DashboardBtn_Clicked" />
            </DataTemplate>
        </BindableLayout.ItemTemplate>
    </VerticalStackLayout>

</ContentPage>