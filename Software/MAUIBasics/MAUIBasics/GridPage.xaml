<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIBasics.GridPage"
             Title="GridPage">
    <Grid BackgroundColor="Silver" ColumnDefinitions="*,*" RowDefinitions="*,*,*"
          ColumnSpacing="25" RowSpacing="25"
          >
        <Button Text="1" Grid.Column="0" Grid.Row="0"/>
        <Button Text="2" Grid.Column="1" Grid.Row="0"/>
        <Button Text="3" Grid.Column="0" Grid.Row="1"/>
        <Button Text="4" Grid.Column="1" Grid.Row="1"/>

        <Button Text="3" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2"/>
        
    </Grid>
</ContentPage>